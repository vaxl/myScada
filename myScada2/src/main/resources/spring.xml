<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">


    <context:annotation-config/>

    <context:component-scan base-package="model"/>
    <context:component-scan base-package="controller"/>
    <context:component-scan base-package="entity"/>
    <context:component-scan base-package="view"/>
    <context:component-scan base-package="connectors"/>


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="props.properties"/>
    </bean>

    <!--Beans-->

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="5" />
        <property name="maxPoolSize" value="20" />
        <property name="queueCapacity" value="5" />
    </bean>

    <bean id="messageParseExec" class="parser.MessageParseExec">
        <constructor-arg name="commandMap" >
            <map>
                <entry key="rawData">
                    <bean class="parser.parsers.RawData"/>
                </entry>
                <entry key="modbusSlaveTcp">
                    <bean class="parser.parsers.ModbusSlaveTcp"/>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <!--Setups-->
    <bean id = "connectorSetup" class="connectors.ConnectorSetup">
        <property name="port" value="502"/>
        <property name="parser" value="rawData"/>
        <property name="name" value="noName"/>
    </bean>

</beans>